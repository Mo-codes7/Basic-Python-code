 # Ask the user for their first name and surname
firstname = input("What is your first name? ")
surname = input("What is your surname? ")

# Greet the user
print(f"Hello, {firstname} {surname}")

# Display the users initials
initials = firstname[0] + surname[0]
print("Your initials are:", initials)

# Combine into their full name
fullname = firstname + " " + surname
print("Full name:", fullname)

# Display name in uppercase (surname first)
print("Uppercase format:", surname.upper(), firstname.upper())

# Show the lengths of the names
print("Length of first name:", len(firstname))
print("Length of surname:", len(surname))
